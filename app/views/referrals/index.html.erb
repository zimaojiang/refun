<p>
<br>
<h1><span class="headertext">My Referrals</span></h1>
<br>


<% form_tag("/referrals/show", :method => "get") do %>
<table border="0" cellpadding="0" cellspacing="0" width="350">
	<tr>
		<td><span class="footertext">Enter Your Shopcode:</span></td>
		<td><span class="footertext"><%= flash[:shopcode].nil? ? text_field_tag("shopcode") : text_field_tag("shopcode", flash[:shopcode]) %></span></td>
	</tr>
	<tr>
		<td><span class="footertext">Enter Your Email:</span></td>
		<td><span class="footertext"><%= flash[:email].nil? ? text_field_tag("email") : text_field_tag("email", flash[:email]) %></span></td>
	</tr>
	<tr>
		<td>&nbsp;</td>
		<td><span class="footertext"><%= submit_tag("View") %></span></td>
	</tr>
	<tr>
		<td>&nbsp;</td>
		<td>&nbsp;</td>
	</tr>
	<tr>
		<td>&nbsp;</td>
		<td><span class="redtext"><%= flash[:message] %></span></td>
	</tr>
	
</table>
<% end %>	
